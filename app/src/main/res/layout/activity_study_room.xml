<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FBE5D6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back_button_study_room"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/chat_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/studyroom_bt"
        app:layout_constraintStart_toStartOf="@id/back_button_study_room"
        app:layout_constraintTop_toBottomOf="@+id/back_button_study_room" />

    <ImageView
        android:id="@+id/kokuban"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/studyroom_kokuban"
        app:layout_constraintDimensionRatio="1.2:1"
        app:layout_constraintBottom_toTopOf="@+id/chair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="1" />

    <DigitalClock
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/kokuban"
        app:layout_constraintEnd_toEndOf="@+id/kokuban"
        app:layout_constraintStart_toStartOf="@+id/kokuban"
        app:layout_constraintTop_toTopOf="@+id/kokuban" />

    <LinearLayout
        android:id="@+id/chair"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kokuban"
        app:layout_constraintBottom_toBottomOf="parent">

